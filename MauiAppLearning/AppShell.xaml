            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="dotnet_bot.png"
        Route="MainPage" />
        </Tab>
        <Tab Title="Page 3">
           <ShellContent
        Title="Platform"
        ContentTemplate="{DataTemplate local:Platform}"
        Route="Platform" />
        </Tab>
        <Tab Title="Page 4">
           <ShellContent
        Title="TestPage"
        ContentTemplate="{DataTemplate local:TestPage}"
        Route="TestPage" />
        </Tab>
    </TabBar>



