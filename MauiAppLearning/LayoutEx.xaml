<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.LayoutEx"
             Title="LayoutEx">
    <VerticalStackLayout Padding="30,50,30,30">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid ColumnDefinitions="Auto ,60,Auto" Margin="5" VerticalOptions="Center" HorizontalOptions="Center">

            <Button Text="1" Grid.Column="0" WidthRequest="100"/>
            <!--<Button Text="2" Grid.Column="1" WidthRequest="100"/>-->
            <Button Text="3" Grid.Column="2" WidthRequest="100"/>
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>